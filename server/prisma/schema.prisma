generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  token     String
  name      String
  status    FileStatus
  originalFormat    FileFormat
  originalSize      Int?
  originalWidth     Int?
  originalHeight    Int?
  originalPath      String?
  // Processed file
  processedFormat FileFormat?
  processedSize Int?
  processedWidth Int?
  processedHeight Int?
  processedPath String?
  processedRemovedBackground Boolean?
  processedCompressed Boolean?
}

enum FileStatus {
  UPLOADED
  PROCESSED
  ERROR
}

enum FileFormat {
  png
  jpeg
  webp
  avif
}
