generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id        String   @id @default(uuid())
  token     String
  name      String
  format    FileFormat
  status    FileStatus
  size      Int?
  width     Int?
  height    Int?
  path      String?
  // Processed file
  processedPath String?
  processedWidth Int?
  processedHeight Int?
  processedFormat FileFormat?
  processedSize Int?
  processedRemovedBackground Boolean?
  processedCompressed Boolean?
}

enum FileStatus {
  UPLOADING
  UPLOADED
  PROCESSING
  PROCESSED
}

enum FileFormat {
  png
  jpg
  webp
  avif
}
